#!/bin/bash

echo "Running postinstall script..."

rm /usr/lib/initcpio/hooks/archiso* || echo "WARN: Failed to remove /usr/lib/initcpio/hooks/archiso*"
rm /etc/mkinitcpio.conf.d/archiso || echo "WARN: Failed to remove /etc/mkinitcpio.conf.d/archiso, OS may not boot!"
mkinitcpio -P || echo "ERR: Failed to generate new initramfs!"
